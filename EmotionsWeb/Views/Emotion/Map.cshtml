@model IEnumerable<EmotionsWeb.Models.Post>


<h2>Map3</h2>
<div id="map" style="width:100%;height:500px"></div>

<script>
    function myMap() {

        // Try HTML5 geolocation.
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function (position) {
                var pos = {
                    lat: position.coords.latitude,
                    lng: position.coords.longitude
                };

                infoWindow.setPosition(pos);
                
                var pointerHtml = ""

                infoWindow.setContent('Here I Am!');
                map.setCenter(pos);

                var cityCircle = new google.maps.Circle({
                    strokeColor: '#FF0000',
                    strokeOpacity: 0.8,
                    strokeWeight: 1,
                    fillColor: '#FF0000',
                    fillOpacity: 0.35,
                    map: map,
                    center: map.getCenter(),
                    radius: 500
                });

            }, function () {
                handleLocationError(true, infoWindow, map.getCenter());
            });
        } else {
            // Browser doesn't support Geolocation
            handleLocationError(false, infoWindow, map.getCenter());
        }

        var map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: -34.397, lng: 150.644 },
            zoom: 14
        });
        var infoWindow = new google.maps.InfoWindow({ map: map });



        /// Set Markers On Map
        function addMarker(latitude, longitude, title, description, map) {
            var latLng = new google.maps.LatLng(parseFloat(latitude), parseFloat(longitude));
            var contentString = '<h3>' + title + '</h3>' + '<p>' + description + '</p>';

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            var marker = new google.maps.Marker({
                position: latLng,
                title: title,
                map: map,
                // icon:"../Content/svg/dreams/bird.svg",
                draggable: false
            });

            google.maps.event.addListener(marker, 'click', function () {
                infowindow.open(map, marker);
            });




        }

        function handleLocationError(browserHasGeolocation, infoWindow, pos) {
            infoWindow.setPosition(pos);
            infoWindow.setContent(browserHasGeolocation ?
                                  'Error: The Geolocation service failed.' :
                                  'Error: Your browser doesn\'t support geolocation.');
        }


        // Now add markers
    @foreach (var item in Model) {
           @:addMarker('@item.Latitude', '@item.Longitude', '@item.Title', '@item.Description', map);
        }

    }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBM5c6M54HGE_UyolfgA0sthgGox7vGabo&callback=myMap" async defer></script>